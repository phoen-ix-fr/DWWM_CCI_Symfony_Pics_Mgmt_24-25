{% extends 'base.html.twig' %}

{% block title %}Liste de mes évènements{% endblock %}

{% block body %}
<h1>Liste de mes évènements</h1>

<div class="my-2">
  <twig:BootstrapButton type="success" 
    text="Ajouter un évènement" 
    path="{{ path('app_event_create') }}" />
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
  {% for event in events %}
  <div class="col mb-4">
    <twig:BootstrapCard
      title="{{ event.title }}"
      imgSrc=""
    >   
    <twig:block name="buttons">
      <twig:BootstrapButton type="primary" 
        text="Détails" 
        path="{{ path('app_event_show', { id: event.id }) }}" />

      <twig:BootstrapButton type="warning" isOutlined 
        text="Modifier" 
        path="{{ path('app_event_edit', { id: event.id }) }}" />

    </twig:block>  

    </twig:BootstrapCard>
  </div>
  {% else %}
    <p>Aucun évènement n'a été trouvé</p>
  {% endfor %}
</div>

{% endblock %}
